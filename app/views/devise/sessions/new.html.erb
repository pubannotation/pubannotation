<% content_for :path do %>
	> <%= link_to t('views.paths.home'), home_path %>
	> login
<% end %>

<h1><%= t('views.users.sign_in') %></h1>

<div style="margin:2px">
    <a href="/users/auth/github"><div style="display:flex; color:#fff">
    <div style="display:inline-block; margin: 0; padding:5px; background-color:#866"><i class="fa fa-github" style="width:16px; height:20px"></i></div><div style="display:inline-block; margin:0; padding:5px; background-color:#633"> Log in with GitHub</div>
    </div></a>
</div>

<div style="margin:2px">
    <a href="/users/auth/google_oauth2"><div style="display:flex; color:#fff">
        <div style="display:inline-block; margin: 0; padding:5px; background-color:#99f"><i class="fa fa-google" style="width:16px; height:20px"></i></div><div style="display:inline-block; margin:0; padding:5px; background-color:#88f"> Log in with Google</div>
    </div></a>
</div>


<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
<table>
<tr>
<th><%= f.label :login %></th>
<td><%= f.text_field :login, :placeholder => "Your username or e-mail address" %></td>
</tr>
<tr>
<th><%= f.label :password %></th>
<td><%= f.password_field :password %></td>
</tr>
<tr>
<th colspan="2">
<%= f.label :remember_me %>
<%= f.check_box :remember_me %>
<%= f.submit t('views.users.sign_in'), :class => 'capitalize_first', :style => 'width: 10em' %>
</th>
</tr>
</table>
<% end %>
<br/>
<%= render "devise/shared/links" %>
