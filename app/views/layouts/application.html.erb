<!DOCTYPE html>
<html>
	<head>
		<title><%= t('views.service.title') -%></title>
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<%= stylesheet_link_tag    "application", :media => "all" -%>
		<%= yield :css -%>
		<%= javascript_include_tag "application" -%>
		<script>
			jQuery(document).ready(function($) {
				$('a[rel*=facebox]').facebox()
			})
		</script>
		<%= yield :javascript -%>
		<%= csrf_meta_tags -%>
	</head>

	<body>
		<%= render :partial => 'layouts/dbcls_header' -%>
		<div id="header" class="frame">
			<div class="content">
				<%= render :partial => 'layouts/header' -%>
			</div>
		</div>

		<div id="top-ribbon">
			<div class="content">
				<div id="path">
					<%= yield :path -%>
				</div>
			</div>
		</div>
		<div id="notice">
			<div class="content">
				<%= notice.html_safe if notice -%>
				<%= alert -%>
			</div>
		</div>

		<div id="main">
			<div class="content">
				<%= yield -%>
			</div>
		</div>
		<div id="footer" class="frame">
			<div class="content">
				<%= render :partial => 'layouts/footer' -%>
			</div>
		</div>
		<div id='Indicator'></div>
	</body>
</html>
